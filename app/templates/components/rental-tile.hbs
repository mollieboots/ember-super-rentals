
<li>{{#link-to 'rental' rental.id}}{{rental.owner}}'s {{rental.type}} in {{rental.city}}{{/link-to}}
    {{#if isImageShowing }}
      <p><img src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}}></p>
    {{else}}
      <button class="btn btn-info" {{action 'imageShow'}}>Show image</button>
    {{/if}}
    {{#if areDetailsShowing }}
      <p><strong>Amenities:</strong> {{rental.amenities}}</p>
      <p><strong>Square Footage:</strong> {{rental.squareFootage}} sq feet</p>
      <button class="btn btn-warning" {{action 'detailsHide'}}>Hide Details</button>
    {{else}}
      <button class="btn btn-success" {{action 'detailsShow'}}>Show Details</button>
    {{/if}}

    <!-- the buttons delete and update will go to the rental details page  -->
      <!-- <button class="btn btn-danger" {{action 'delete' rental}}>Delete</button>
      {{update-rental rental=rental update="update"}} -->
</li><br>
