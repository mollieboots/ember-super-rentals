{{#if updateRentalForm}}
  <h4>Update {{rental.owner}}'s {{rental.type}}</h4>
      <form>
        <div class="form-group">
          <label for="owner">Owner</label>
          {{input value=owner id="owner" paceholder=rental.owner}}
        </div>
        <div class="form-group">
          <label for="type">Type</label>
          {{input value=type id="type" placeholder=rental.type}}
        </div>
        <div class="form-group">
          <label for="city">City</label>
          {{input value=city id="city" placeholder=rental.city}}
        </div>
        <div class="form-group">
          <label for="bedrooms">Number of bedrooms</label>
          {{input value=bedrooms id="bedrooms" placeholder=rental.bedrooms}}
        </div>
        <div class="form-group">
        <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=rental.image}}
        </div>
        <div class="form-group">
          <label for="amenities">Amenities</label>
          {{input value=amenities id="amenities" placeholder=rental.amenities}}
        </div>
        <div class="form-group">
          <label for="squareFootage">SquareFootage</label>
          {{input value=squareFootage id="squareFootage" placeholder=rental.squareFootage}}
        </div>

        <button class="btn" {{action 'update' rental}}>Save</button>
      </form>

{{else}}
  <button class="btn btn-warning" {{action 'updateRentalForm'}}>Update</button>
{{/if}}
